@model GameLibraryWebApp.Models.PublisherModel

@{
    ViewData["Title"] = "Details";
}
@foreach (var item in Model.BoardGames)
{
    
        
            @item.Name

        
       
            <img class="rounded-circle" src="@item.ImageURL" alt="@item.Name"
                 style="max-width: 150px">
     
}
<h1>@Model.Name Board Games</h1>
<table class="table">
   <tbody>
        @if (Model.BoardGames.Count() > 0)
        {
            @foreach (var item in Model.BoardGames)
            {
                <tr>
                    <td>
                        @item.Name
                     
                    </td>               
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ImageURL" alt="@item.Name"
                        style="max-width: 150px">
                    </td>
                </tr>
            }
        }
        else
        {
            <h4>No BoardGames for this publisher</h4>
        }
   </tbody>

</table>
@{
    ViewData["Title"] = "Details";
}

<div> 
    <a asp-action="Index">Back to List</a>
</div>
